<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="132dp"
    android:layout_height="120dp"
    android:backgroundTint="#222325"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp"
        android:textColor="#858688">

        <ImageView
            android:id="@+id/id_offer"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/small_star"
            android:background="@drawable/ellipse_13"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/title_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вакансии рядом с вами"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />
        <TextView
            android:id="@+id/button_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Поднять"
            android:textColor="#4CB24E"
            android:textSize="14sp" />


    </LinearLayout>
</androidx.cardview.widget.CardView>